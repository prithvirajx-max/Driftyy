PORT=5001
MONGODB_URI=${MONGODB_URI}
JWT_SECRET=${JWT_SECRET}

# Google OAuth credentials
GOOGLE_CLIENT_ID=${GOOGLE_CLIENT_ID}
GOOGLE_CLIENT_SECRET=${GOOGLE_CLIENT_SECRET}

# Facebook credentials
FACEBOOK_APP_ID=${FACEBOOK_APP_ID}
FACEBOOK_APP_SECRET=${FACEBOOK_APP_SECRET}

# Frontend URL for CORS and redirect
CLIENT_URL=${CLIENT_URL}

# Token settings
TOKEN_EXPIRY=7d

# Admin account (for initial setup)
ADMIN_EMAIL=${ADMIN_EMAIL}
ADMIN_PASSWORD=${ADMIN_PASSWORD}

# Important: Before deploying to production:
# 1. Change MongoDB URI to your production database
# 2. Generate a strong random JWT_SECRET
# 3. Update redirect URIs in Google and Facebook developer consoles
# 4. Change CLIENT_URL to your production URL
